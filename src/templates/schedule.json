{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4",
    "body": [
        {
            "type": "TextBlock",
            "text": "Choose a date to schedule the booking for",
            "wrap": true,
            "weight": "bolder"
        },
        {
            "id": "scheduleFor",
            "type": "Input.Date"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Execute",
                    "title": "Cancel",
                    "verb": "start",
                    "style": "destructive"
                },
                {
                    "type": "Action.Execute",
                    "title": "Finish",
                    "verb": "finish",
                    "style": "positive",
                    "mode": "primary"
                }
            ]
        }
    ]
}